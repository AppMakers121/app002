<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/detailscardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/detailsimageid"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/detailstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginBottom="31dp"
                android:layout_toRightOf="@+id/detailsimageid"
                android:text="title"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/detailstue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/detailsmonday"
                android:text="TU"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/detailswed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/detailstue"
                android:text="WED"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/detailsfri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/detailswed"
                android:text="FR"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/detailssat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/detailsfri"
                android:text="SA"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/detailssun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/detailssat"
                android:text="SU"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/detailshowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailstitle"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="-12dp"
                android:layout_toRightOf="@+id/detailsimageid"
                android:text="12:00"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deailsampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailstitle"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/detailshowtime"
                android:text="AM"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsmonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deailsampm"
                android:layout_marginLeft="-97dp"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/detailsimageid"
                android:text="MO"
                android:textSize="30dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>