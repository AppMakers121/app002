<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/detailscardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foregroundGravity="center_vertical"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:id="@+id/relatisveLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/detailstitle"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="30sp"
                android:text="TITIE"
                android:background="#fff"
                android:textColor="#000"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/detailssettime"
                android:layout_width="143dp"
                android:layout_height="44dp"
                android:layout_alignStart="@+id/detailstitle"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="12:00"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/detailssettime"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_alignBottom="@+id/detailssettime"
                android:layout_marginStart="145dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="AM"
                android:textColor="#000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/detailsimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@+id/detailssettime"
                android:background="@android:drawable/ic_menu_camera"
                android:contentDescription="@android:string/cut" />

            <TextView
                android:id="@+id/detailsmo"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailssettime"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="MO"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailstu"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailsmo"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="41dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="TU"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailstu"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="WE"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/detailstu"
                app:layout_constraintTop_toTopOf="@+id/detailssettime" />

            <TextView
                android:id="@+id/detailsthu"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailssettime"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="154dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="TH"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsfri"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailsthu"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="FR"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailssat"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailsfri"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="SA"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailssun"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/detailssat"
                android:layout_alignTop="@+id/detailssettime"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:background="#fff"
                android:gravity="center"
                android:text="SU"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>