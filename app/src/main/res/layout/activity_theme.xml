<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="350dp"
    android:layout_height="200dp"
    >

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#2196F3"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_image2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/dialog_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_image3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#673AB7"
        app:layout_constraintStart_toEndOf="@+id/dialog_image2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_image4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#E91E63"
        app:layout_constraintStart_toEndOf="@+id/dialog_image3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_image5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#F44336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image" />

    <ImageView
        android:id="@+id/dialog_image6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#FFC107"
        app:layout_constraintStart_toEndOf="@+id/dialog_image5"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image2" />

    <ImageView
        android:id="@+id/dialog_image7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#09EC12"
        app:layout_constraintStart_toEndOf="@+id/dialog_image6"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image3" />

    <ImageView
        android:id="@+id/dialog_image8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="#E73E08"
        app:layout_constraintStart_toEndOf="@+id/dialog_image7"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image4" />


</android.support.constraint.ConstraintLayout>